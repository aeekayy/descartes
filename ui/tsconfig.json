{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2019"
    ],
    "outDir": "build",
    "target": "es2019",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": ["src"]
}